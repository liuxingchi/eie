function doLogout()
{
	if (confirm("确定注销登录吗？")){
		showHint($('#logout_hint'), '', '正在注销……', 1);
		ajaxPost(
			'/app_dev.php/manage/logout',
			{},
			function(){
				window.parent.location.href="/manage/login";
			},
			function(){
				window.parent.location.href="/manage/login";
			}
		);
		
	}
}
