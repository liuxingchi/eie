<script>
var domain = "http//eie.club/";

function reloadList(current){
	$("#order_list").html("");
	var current = current;
	pageTemp(currentPage,"{}","news");
  	var json = {
  		  	'start':START,
  		  	'num':20
			};
  	ajaxPost(
            'app_dev.php/api/news/retrieveByFilter',
            json,
            function(data, textStatus){
            	for(var i=0;i<data.length;i++){
					$("#order_list").append("<tr id='"+data[i].id+"'><td><img src='"+data[i].image_url+"' width='75'/></td><td>"+data[i].title+"</td><td>"+data[i].content+"</td><td>"+(data[i].creation_date)+"</td><td><a href='#' onclick='info("+data[i].id+")'>详情</a>/<a href='#' onclick='del("+data[i].id+")'>删除</a></td></tr>"); 
		      }//结束循环
				},
            function(XMLHttpRequest, textStatus, errorThrown){}
        );
}

$(function(){
    reloadList(0);
    $("#add_btn").click(function(){
	location.href="addnews";
	});
  
});//function 主函数结束
function info(id){
	var json = {
			"news_id":id
			};
	ajaxPost(
            'app_dev.php/api/news/info',
            json,
            function(data, textStatus){
            	$("#myModalLabel").text(data.title);
            	$("#myModalContent").html("<img src='"+data.image_url+"'/><br>"+data.content);
            	$("#diaModal").modal('show');
			},
            function(XMLHttpRequest, textStatus, errorThrown){  
				    alert("出现错误，请重试");
			}
        );
	
}
function del(id){
	
	var json = {
			"news_id":id
			};
	ajaxPost(
            'api/news/del',
            json,
            function(data, textStatus){
            	$("#"+id).remove();
				},
            function(XMLHttpRequest, textStatus, errorThrown){  
				    alert("出现错误，请重试");
			}
        );
}
</script>
 
