function addMessage(){
	var message = $("#message").val();
	var user_id = $("#user_id").val();
	//alert(word+"________"+id);
	
	var json = {
			"uid":user_id,
			"content":message
			};
	ajaxPost(
            'app_dev.php/api/user/pushone',
            json,
            function(data, textStatus){
                $("#message").val();
                $("#modal").modal("hide");
                $("#alert").show();
                setTimeout("$('#alert').hide()", 5000);
				},
            function(XMLHttpRequest, textStatus, errorThrown){  
			}
        );
}
</script>
