            'app_dev.php/api/user/retrieveByFilter',
            json,
            function(data, textStatus){
            	for(var i=0;i<data.length;i++){
            	    if(data[i].enable==1){
            	    	   var status = "<a href='#' onclick='enable("+data[i].id+",0)'>禁用</a>";
                	    }else{
                	        var status = "<a href='#' onclick='enable("+data[i].id+",1)'>启用</a>";
                    	    }
            	    var grade = "普通会员";
            	    data[i].grade==1?grade = "三星会员":(data[i].grade==2?grade="五星会员":grade = "普通会员");
            	    var mark = "普通用户";
             	    data[i].mark==1?mark = "商家用户":"";
             	    //data[i].mark==1?mark = "商家用户":"";
//<td><a href='memberinfo/"+data[i].id+"'>查看并修改</a></td>
 				   $("#order_list").append("<tr id='tr"+data[i].id+"'><td>"+data[i].id+"</td><td>"+data[i].username+"</td><td>"+data[i].phone+"</td><td>"+grade+"</td><td>"+mark+"</td><td>"+data[i].category+"</td><td>"+data[i].last_login+"</td><td id='status"+data[i].id+"'>"+status+"</a>/<a href='#' onclick='showModal("+data[i].id+")'>发送消息</a>/<a href='#' onclick='changeMark("+data[i].id+","+data[i].mark+")'>转变身份</a>/<a href='#' onclick='changeCategory("+data[i].id+")'>更改专职类型</a></td></tr>"); 
 				   }//结束循环
				},
            function(XMLHttpRequest, textStatus, errorThrown){  
				    alert("出现错误，请重试");
			}
        );
}

$(function(){
reloadList(0);
//搜索
$("#search_btn").click(function(){
	var keyword = $("#search_box").val();
	KEYWORD = keyword;
	reloadList(0);
	});

document.getElementById("search_box").onkeyup = function(e){
				var me = this;
				e = e|| window.event;
				var keycode = e.keyCode;
				if(keycode === 13){
				var keyword = $("#search_box").val();
				KEYWORD = keyword;
				reloadList("",0);
				}
			};

});//function 主函数结束
function changeMark(uid,mark){
	var mark = Math.abs(parseInt(mark) - 1);
	var json = {
			"user_id":uid+"",
			"mark":mark+""
			};
	ajaxPost(
            'app_dev.php/api/user/changeProfile',
            json,
            function(data, textStatus){
            	reloadList(0);
				},
            function(XMLHttpRequest, textStatus, errorThrown){  
			}
        );
}
function showModal(uid){

	$("#modal").modal("show");
	$("#user_id").val(uid);
}
