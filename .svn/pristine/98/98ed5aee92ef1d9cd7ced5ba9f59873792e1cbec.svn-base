        timeout:5000,
        cache:true,
        async:true,
        success: function (data, textStatus) {
        	for(var i = 0;i<data.length;i++){
            	if(i<=5){
					 var my = i;
                	}else{
						var my = i - 6;
                    	}
        	  $("#buttonArea").append("<a href='#' onclick='choose("+data[i].id+")' class='myButton myButtonColor"+my+"'>"+data[i].name+"</a>");
