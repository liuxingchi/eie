{% extends 'YdzyAdminBundle:Default:layout.html.twig' %} {% block body
%}
<script>
var START = 0;
var PAY = "0";
var WAY = "0";
</script>
<style>
.postmoney {
	display: none;
}

.btn_down {
	float: right;
}
</style>
<script>

function reloadList(current){
	$("#list").html("");
	var current = current;
	
  	
	var current = current;
	//page(current);
  	var json = {
  		  	'start':START,
  		  	'num':20
			};
  	ajaxPost(
            'app_dev.php/api/publish/appeal',
            json,
            function(data, textStatus){
            	for(var i=0;i<data.length;i++){
                	 $("#list").append("<div class='panel panel-default'><div class='panel-heading'><h3 class='panel-title'>"+data[i].name+"</h3></div><div class='panel-body' id='category"+data[i].id+"'></div></div>"); 
		      }//结束循环
				},
            function(XMLHttpRequest, textStatus, errorThrown){}
        );
}
function category(id){
	PAY = ""+id;
	reloadList(0);
}
function way(id){
	WAY = ""+id;
	reloadList(0);
}
$(function(){
	$(".btn_up").click(
			function(){
				$(".btn_up").addClass('btn-default');
				$(".btn_up").removeClass('btn-primary');
				$(this).removeClass('btn-default');
				$(this).addClass('btn-primary');
				}
			);
	$(".btn_left").click(function(){
		   $(".btn_right").removeClass('active');
		   $(".btn_left").addClass('active');
		});
	$(".btn_right").click(function(){
		  $(".btn_left").removeClass('active');	
		  $(".btn_right").addClass('active');  
		});
	$(".btn_down").click(
			function(){
				$(".btn_down").addClass('btn-default');
				$(".btn_down").removeClass('btn-primary');
				$(this).removeClass('btn-default');
				$(this).addClass('btn-primary');
				}
			);
reloadList(0);
});
function status(id){
	//alert(id);将此提现记录的申请者的账户里的钱进行改变
	var json = {
			"id":id
			};
	ajaxPost(
            'app_dev.php/api/money/status',
            json,
            function(data, textStatus){
            	$("#status"+id).html("已打款");
				},
            function(XMLHttpRequest, textStatus, errorThrown){  
				    alert("出现错误，请重试");
			}
        );
}
</script>




<button type="button" class="btn btn_down col-sm-1 btn-default"
	onclick='way(1)'">支付宝</button>
<button type="button" class="btn btn_down col-sm-1 btn-default"
	onclick='way(2)'">银行卡</button>

<div class="col-sm-12" id="" style="margin-top: 15px; padding: 0;">
	<div style="padding-top: 20px;" class="col-sm-12" id="list"></div>

</div>


</div>
<!--content结束-->

{% endblock %}
