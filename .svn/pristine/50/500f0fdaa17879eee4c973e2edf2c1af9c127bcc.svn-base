<script>
var domain = "http//eie.club/";

function reloadList(current){
	$("#order_list").html("");
	var current = current;
	pageTemp(currentPage,"{}","publish");
  	var json = {
  		  	'start':START,
  		  	'num':20
			};
  	ajaxPost(
            'app_dev.php/api/publish/publishAll',
            json,
            function(data, textStatus){
            	for(var i=0;i<data.length;i++){
                  if(data[i].appeal_id == 2){	
					$("#order_list").append("<tr id='"+data[i].id+"'><td><img width='75px' src='"+data[i].image_url+"' />"+
					"</td><td>"+data[i].username+
					"</td><td>"+data[i].price+
					"</td><td>"+data[i].category+
					"</td><td>"+data[i].appeal+
					"</td><td>"+(data[i].creation_date)+
					"</td><td><a href='#' onclick='info("+data[i].id+")'>详情</a>/<a href='#' onclick='del("+data[i].id+")'>删除</a></td></tr>"); 
                  }else{
            	  $("#order_list").append("<tr id='"+data[i].id+"'><td><img width='75px' src='"+data[i].image_url+"' />"+
  					"</td><td>"+data[i].username+
  					"</td><td>"+data[i].price+
  					"</td><td>"+data[i].category+
  					"</td><td>"+data[i].appeal+
  					"</td><td>"+(data[i].creation_date)+
  					"</td><td><a href='#' onclick='info("+data[i].id+")'>详情</a>/<a href='#' onclick='del("+data[i].id+")'>删除</a></td></tr>"); 
                      }

				 }//结束循环
				},
            function(XMLHttpRequest, textStatus, errorThrown){}
        );
}
function follow(id){
	var json = {
			"id":id
			};
	ajaxPost(
            'app_dev.php/api/publish/appealSale',
            json,
            function(data, textStatus){
                $("#newMessage").val("");
                $("#message").html("");
            	for(var i=0;i<data.length;i++){
            		   $("#message").append("<li class='list-group-item'>"+data[i].message+"</li>");
                	}
            	$("#myFollow").modal('show');
            	$("#btnAddMessage").attr("onclick","addNewMessage("+id+")");;
			},
            function(XMLHttpRequest, textStatus, errorThrown){  
				    alert("出现错误，请重试");
			}
        );
}
function info(id){
    $("#images").html("");
    $("#count").html("");
	var json = {
			"id":id
			};
	ajaxPost(
            'app_dev.php/api/publish/info',
            json,
            function(data, textStatus){
            	count(id);
            	$("#username").text(data.username);
            	$("#price").text((data.price)+"元");
            	$("#category").text(data.category);
            	$("#appeal").text((data.appeal));
            	$("#creationDate").text(data.creation_date);
            	$("#showContent").html(data.content);
            	$("#diaModal").modal('show');

            	for(var i=0;i<data.image_urls.length;i++){
            		   $("#images").append("<img width='75px' src='"+data.image_urls[i].url+"' />");
                	}
			},
            function(XMLHttpRequest, textStatus, errorThrown){  
				    alert("出现错误，请重试");
			}
        );
}
$(function(){
    reloadList(0);
    $("#add_btn").click(function(){
	location.href="addpublish";
	});
  
});//function 主函数结束

function del(id){
	
	var json = {
			"recommended_id":id
			};
	ajaxPost(
            'app_dev.php/api/recommended/del',
            json,
            function(data, textStatus){
            	$("#"+id).remove();
				},
            function(XMLHttpRequest, textStatus, errorThrown){  
				    alert("出现错误，请重试");
			}
        );
}
function addNewMessage(id){

	var newMessage = $("#newMessage").val();
	var json = {
			"id":id,
			"message":newMessage
			};
	ajaxPost(
            'app_dev.php/api/publish/addMessage',
            json,
            function(data, textStatus){
            	$("#myFollow").modal('hide');
            	follow(id);
				},
            function(XMLHttpRequest, textStatus, errorThrown){  
				    alert("出现错误，请重试");
			}
        );
	//alert(newMessage);
	
}

function count(id){
	var json = {
			"id":id
			};
	ajaxPost(
            'app_dev.php/api/publish/count',
            json,
            function(data, textStatus){
            	for(var i=0;i<data.length;i++){
                	if(data[i].appeal_id==6){
                    		if(data[i].count==1){
							    var status = "<span style='padding-left:30px;'><a href='order'>处理订单</a></span>";
                    		}else{
                    			var status = "<span style='padding-left:30px;'><a href='#' onclick='showModal("+data[i].user_id+","+data[i].recommended_id+")'>生成订单</a></span>";
                        		}
	                    }else{
							var status = "";
                        	}
                	$("#count").append(data[i].username+"<span style='padding-left:30px;'>"+data[i].appeal+"</span>"+status+"<br>");
            	}
			},
            function(XMLHttpRequest, textStatus, errorThrown){  
				    
			}
        );
}

function showModal(uid,id){
	$("#btnCreate").attr("onClick","createOrder("+uid+","+id+")");
	$("#createOrderModal").modal("show");
}
function createOrder(user_id,publish_id){
	var json = {
  			'user_id':user_id,
  			'publish_id':publish_id,
  			'money':$("#money").val()
			};
  	ajaxPost(
            'app_dev.php/api/user/createOrder',
            json,
            function(data, textStatus){
                alert("订单生成成功");
				},
            function(XMLHttpRequest, textStatus, errorThrown){}
        );
}
</script>
 
